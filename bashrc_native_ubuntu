alias open='xdg-open '

export LS_COLORS="$(vivid generate molokai)"

## This stuff is Automatically Appended but needs to happen before conda env is activated
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/min/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/min/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/min/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/min/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# Work inside general conda env (TODO logicl to handle it not existing)
conda activate general

