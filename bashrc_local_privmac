# Exports
export PATH=/Users/minmac/miniconda3/bin:/usr/local/sbin:/usr/local/bin:${PATH}

# Alias
alias truecrypt='/Applications/TrueCrypt.app/Contents/MacOS/Truecrypt --text'
alias documents_backup="/Library/Management/documents_backup_crypt.sh"
alias top="top -s1 -o cpu -R -F"
alias timemachineBackup="bash /Library/Management/WorkerScripts/timemachineBackup.sh"
alias timemachineMount="bash /Library/Management/WorkerScripts/timemachineMount.sh"
alias tester="echo 'yass'; activate general2"

# Proxy stuff
web_proxy_start(){
    activate general2;
    python /Users/minmac/Code/devops-randoms/boto3/squid_proxy_start.py "$@";
    deactivate
}
web_proxy_stop(){
    activate general2;
    python /Users/minmac/Code/devops-randoms/boto3/squid_proxy_stop.py "$@";
    deactivate
}

## Brew stuff
alias ctags='$(brew --prefix)/bin/ctags'
alias sed="gsed "
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi
export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"
# Utilities that couldn't be linked
export PATH=/usr/local/Cellar/vnstat/1.14/bin:${PATH}

